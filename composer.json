{
  "name": "senttor/serializer",
  "description": "This is a simple json, yaml serializer ",
  "keywords": ["project", "template", "structure", "serializer", "phpunit"],
  "type": "project",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Viktor",
      "email": "oksentiuk.viktor@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5",
    "friendsofphp/php-cs-fixer": "^2.13"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Test\\": "tests/"
    }
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix --allow-risky=yes"
  }
}
